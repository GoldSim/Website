  </PropertyGroup>

  <PropertyGroup>
    <AssemblyTitle>GoldSim Website</AssemblyTitle>
    <Company>GoldSim Technology Group</Company>
    <Product>GoldSim Website</Product>
    <Description>Models, helpers, and configuration for the GoldSim website.</Description>
    <Copyright>Copyright © 2019</Copyright>
    <Authors>Ignia</Authors>
    <AssemblyVersion>2.2.0</AssemblyVersion>
  </PropertyGroup>

  <PropertyGroup>
    <ExcludeFoldersFromDeployment>Images\Courses</ExcludeFoldersFromDeployment>
    <ExcludeFoldersFromDeployment>Images\Content</ExcludeFoldersFromDeployment>
    <ExcludeFoldersFromDeployment>Help</ExcludeFoldersFromDeployment>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AntiXSS" Version="4.3.0" />
    <PackageReference Include="Braintree" Version="4.15.0" />
    <PackageReference Include="EPPlus" Version="4.5.3.2" />
    <PackageReference Include="Ignia.Topics" Version="3.8.0-alpha.267" />
    <PackageReference Include="Ignia.Topics.Web" Version="3.8.0-alpha.267" />
    <PackageReference Include="Ignia.Topics.Web.Mvc" Version="3.8.0-alpha.267" />
    <PackageReference Include="Ignia.Topics.Data.Caching" Version="3.8.0-alpha.267" />
