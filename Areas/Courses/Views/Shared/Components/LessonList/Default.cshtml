@model LessonListViewModel

@if (Model.NavigationRoot is not null) {

  <!-- Left hand Navigation -->
  <nav role="navigation" class="lesson-list track-progress" style="float: left">
    <div class="grid-container">
      <div class="grid-x">
        <ol>
          @foreach (var topic in Model.NavigationRoot.Children) {
            <li class="@topic.GetCssClass() @(topic.IsSelected(Model.CurrentWebPath)? "selected" : "")">
              <a href="@topic.WebPath">
                @(topic.ShortTitle?? topic.Title)
              </a>
            </li>
          }
        </ol>
      </div>
    </div>
  </nav>
  <!-- /Left hand Navigation -->

  <partial name="_TrackEvents" for="TrackingEvents" />
  <partial name="_TrackCourseEvents" for="CourseTrackingEvents" />

}

