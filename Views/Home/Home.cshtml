@{
  Layout = "~/Views/Layout/_Layout.cshtml";

  Ignia.Topics.Topic    EnvironmentalSystems    = Ignia.Topics.Web.TopicRepository.RootTopic.GetTopic("Web:Applications:EnvironmentalSystems");
  Ignia.Topics.Topic    EngineeredSystems       = Ignia.Topics.Web.TopicRepository.RootTopic.GetTopic("Web:Applications:EngineeredSystems");
  Ignia.Topics.Topic    BusinessSystems         = Ignia.Topics.Web.TopicRepository.RootTopic.GetTopic("Web:Applications:BusinessSystems");

}

@section Head {
  <link rel="stylesheet" type="text/css" href="/Shared/Styles/Views/Home.css" />
}

@section MainContentSection {

  <!-- Main Site Content Area -->
  <main id="MainContentArea" class="page content" role="main">

    <!-- Page Header Area -->
    <section id="PageHeaderSection">

      <!-- Page Title Area -->
      <header class="header js-full-height">
        <div class="grid-container">
          <div class="grid-x grid-padding-x">
            <div class="small-12 medium-8 medium-offset-2 centered">

              <!-- Short Title -->
              <h1 class="page title short">@Model.Topic.Title</h1>

              <!-- Long Title (Subtitle) -->
              <h1 class="page title long">@Model.Topic.Attributes.Get("Subtitle")</h1>

              <!-- Video -->
              <div class="responsive-embed widescreen video">
                <video controls="">
                  <source src="http://3fdaec166a0b35abfa2a-3991774b1862aed7fa3658c502b53d27.r19.cf1.rackcdn.com/GoldSim%20in%20Nutshell.mp4" type="video/mp4">
                  Your browser does not support the HTML5 video.
                </video>
              </div>
              <!-- /Video -->

            </div>
          </div>
        </div>
      </header>
      <!-- /Page Title Area -->

    </section>
    <!-- /Page Header Area -->

    <article itemscope itemtype="http://schema.org/WebPageElement" itemprop="mainContentOfPage" class="grid-container">

      <!-- Main Page Content -->
      <div class="grid-x">

        <!-- Introduction Pane -->
        <section id="Introduction" class="cell panel introduction" role="region">
          @Html.Raw(@Model.Topic.Attributes.Get("Introduction"))
        </section>
        <!-- /Introduction Pane -->

        <!-- Slideshow Pane -->
        <section id="Usage" class="pane usage" role="region">
          <header>
            <h1>What can you do with GoldSim?</h1>
          </header>
          <div class="orbit slideshow" aria-label="What can you do with GoldSim?" data-orbit data-use-m-u-i="false" data-auto-play="false">
            <div class="orbit-wrapper">
              <div class="orbit-controls">
                <button class="orbit-previous"><span class="show-for-sr">Prev</span>&#9664;&#xFE0E;</button>
                <button class="orbit-next"><span class="show-for-sr">Next</span>&#9654;&#xFE0E;</button>
              </div>
              <ul class="orbit-container">
                <li class="orbit-slide is-active grid-x">
                  <div class="medium-8 cell text">
                    <h2>Evaluate Alternatives Using Dynamic Simulation</h2>
                    <p>GoldSim is a powerful and flexible software platform for visualizing and dynamically simulating the future behavior of nearly any kind of physical, financial or organizational system. You build a model in an intuitive manner by literally drawing a picture (an influence diagram) of your system. You can use these models to gain a diagnostic understanding of the system, ask "what if" questions about it, and evaluate alternative designs, policies, and plans.</p>
                  </div>
                  <div class="medium-4 cell screenshot"></div>
                </li>
                <li class="orbit-slide grid-x">
                  <div class="medium-8 cell text">
                    <h2>Represent Uncertainty Using Monte Carlo Simulation</h2>
                    <p>Because the real world is inherently uncertain, GoldSim has powerful features to allow you to quantitatively represent the random variability and uncertainty that is present in all systems. GoldSim uses Monte Carlo simulation to produce quantitative probabilistic predictions of future performance (e.g., “there is a 25% chance of an adverse outcome”) in order to better support the decision-making process.</p>
                  </div>
                  <div class="medium-4 cell screenshot"></div>
                </li>
                <li class="orbit-slide grid-x">
                  <div class="medium-8 cell text">
                    <h2>Represent Complex Dynamics and Build Realistic Models that Can Still be Easily Understood</h2>
                    <p>GoldSim is a hybrid simulator, allowing you to superimpose the occurrence and consequences of discrete events (e.g., financial transactions, accidents, failures) onto continuously varying systems (i.e., material and information flows). This ability, coupled with features to support the construction of hierarchical, top-down models, facilitates the simulation of large, complex systems while keeping the models easy to understand, navigate and explain to others.</p>
                  </div>
                  <div class="medium-4 cell screenshot"></div>
                </li>
                <li class="orbit-slide grid-x">
                  <div class="medium-8 cell text">
                    <h2>Tackle Problems that Cannot be Addressed Using Simpler Approaches</h2>
                    <p>The product of over 25 years of development, GoldSim’s powerful and flexible featues, user-friendly interface, and specialized extension modules (e.g., for financial modeling, reliability analysis, and mass transport modeling) allow you to address problems that can't be adequately represented using simple simulation approaches.</p>
                    <p>You can learn more about GoldSim by taking the Quick Tour.</p>
                  </div>
                  <div class="medium-4 cell screenshot"></div>
                </li>
              </ul>
            </div>
          </div>
        </section>
        <!-- /Slideshow Pane -->

        <!-- Customers Pane -->
        <section id="Customers" class="cell panel customers" role="region">
          <header>
            <h1>Where in the World is GoldSim?</h1>
          </header>
          <p>GoldSim is used by over 600 commercial and government organizations in nearly 60 countries worldwide.</p>
          <p><a href="/Topic/19/">View a partial list of organizations</a> &raquo;</p>
          <aside id="CountryList" role="complementary">
            <!-- Federal Aviation Administration Aeronautical Center<br />Futron Corporation<br />General Dynamics Land Systems<br />Ministry of Defence - Defence Logistics Organisation (United Kingdom)<br />Ministry of Defence (New Zealand)<br />Miltec Systems<br />NASA Ames Research Center<br />NASA Glenn Research Center<br />Neptec Design Group (Canada)<br />Newport News Shipbuilding<br />White Sands Missile Range<br />Wyle Integrated Science and Engineering<br />AgResearch (New Zealand)<br />CIRAD (France)<br />Danisco Animal Nutrition (United Kingdom)<br />Sappi (South Africa)<br />William Grant & Sons (United Kingdom)<br />Amazon.com<br />Arriva (United Kingdom)<br />Bell Canada<br />Caterpillar<br />Cisco Systems<br />Continental Automotive (Germany)<br />EMC<br />IBM<br />Liquid Robotics<br />Schueco International (Germany)<br />Siemens Medical Solutions (Germany)<br />The Scotts Company<br />United States Postal Service<br />Verizon Business Systems -->
            Congo<br />Côte d'Ivoire<br />Croatia<br />Czech Republic<br />Egypt<br />Ethiopia<br />Finland<br />France<br />Germany<br />Ghana<br />Guatemala<br />Hungary<br />India<br />Indonesia<br />Italy<br />Japan<br />Kuwait<br />Laos<br />Lithuania<br />Luxembourg<br />Macedonia<br />Madagascar<br />Malaysia<br />Mauritania<br />Mexico<br />Mongolia<br />Netherlands<br />New Zealand<br />Pakistan<br />Peru<br />Poland<br />Portugal<br />Romania<br />Russia<br />Singapore<br />Slovakia<br />South Africa<br />South Korea<br />Spain<br />Sweden<br />Switzerland<br />Taiwan<br />Tanzania<br />Turkey<br />Ukraine<br />United Arab Emirates<br />United Kingdom<br />United States<br />Vietnam<br />Zambia
          </aside>
        </section>
        <!-- /Customers Pane -->

        <!-- Applications Pane -->
        <section id="Applications" class="pane applications" role="region">
          <header>
            <h1>Learn About GoldSim Applications</h1>
          </header>
          <p class="text">GoldSim has been used for a wide range of diverse applications, ranging from modeling complex environmental systems, to comparing alternative business strategies, to evaluating the risks associated with space missions. You can explore the various GoldSim applications and view case studies below.</p>
          <div class="grid-x grid-margin-x" data-equalizer data-equalize-on="medium">
            <div class="medium-4 cell">
              <div class="card" data-equalizer-watch>
                <picture>
                  <source srcset="/Images/Content/Solution/yosemite.jpg" />
                  <img src="/Images/Content/Solution/yosemite.jpg" alt="Environmental Systems Modeling">
                </picture>
                <h2>Environmental<br/>Systems Modeling</h2>
                @if (EnvironmentalSystems != null) {
                  <ul id="EnvironmentalApplications">
                    @foreach (Ignia.Topics.Topic application in EnvironmentalSystems) {
                      <li><a href="@application.WebPath">@application.Title</a></li>
                    }
                  </ul>
                }
              </div>
            </div>
            <div class="medium-4 cell">
              <div class="card" data-equalizer-watch>
                <picture>
                  <source srcset="/Images/Content/Solution/manufacturing.jpg" />
                  <img src="/Images/Content/Solution/manufacturing.jpg" alt="Engineered Systems Modeling">
                </picture>
                <h2>Engineered<br/>Systems Modeling</h2>
                @if (EngineeredSystems != null) {
                  <ul id="EngineeredApplications">
                    @foreach (Ignia.Topics.Topic application in EngineeredSystems) {
                      <li><a href="@application.WebPath">@application.Title</a></li>
                    }
                  </ul>
                }
              </div>
            </div>
            <div class="medium-4 cell">
              <div class="card" data-equalizer-watch>
                <picture>
                  <source srcset="/Images/Content/Solution/Business.jpg" />
                  <img src="/Images/Content/Solution/Business.jpg" alt="Business Systems Modeling">
                </picture>
                <h2>Business<br/>Systems Modeling</h2>
                @if (BusinessSystems != null) {
                  <ul id="BusinessApplications">
                    @foreach (Ignia.Topics.Topic application in BusinessSystems) {
                      <li><a href="@application.WebPath">@application.Title</a></li>
                    }
                  </ul>
                }
              </div>
            </div>
          </div>
        </section>
        <!-- Applications Pane -->

        <!-- CTAs Pane -->
        <section id="CTAs" class="cell pane cta-links" role="region">
          <header>
            <h1>Learn More</h1>
          </header>
          <p class="text">To learn more about GoldSim, request a web demo or evaluation version.</p>
          <p class="text">If you are just beginning the process of selecting a simulation tool, <a href="/Topic/656/">read our guide for selecting one that best meets your needs</a>.</p>
          <div class="grid-x grid-margin-x" data-equalizer data-equalize-on="medium">
            <div class="medium-6 cell">
              <a href="/Forms/Evaluation.aspx" class="button huge white demo">Request a Web Demo &raquo;</a>
            </div>
            <div class="medium-6 cell">
              <a href="/Forms/Evaluation.aspx" class="button huge white eval">Download a Free Evaluation Version &raquo;</a>
            </div>
          </div>
        </section>
        <!-- /CTAs Pane -->

      </div>
      <!-- /Main Page Content -->

    </article>

  </main>
  <!-- /Main Site Content Area -->

}

@section CTAsSection {}

@section Scripts {
  <!-- ScrollMagic and GSAP -->
  <script src="~/Shared/Scripts/Vendor/ScrollMagic/plugins/animation.gsap.js"></script>
  <script src="~/Shared/Scripts/Vendor/ScrollMagic/plugins/debug.addIndicators.js"></script>
  <script src="~/Shared/Scripts/Vendor/ScrollMagic/ScrollMagic.js"></script>

  <script>
    $(function () {

      /**
       * Configures animation for countries list
       */
      var
        $countryList            = $('#CountryList'),
        countryListAnimation    = TweenMax.fromTo($countryList, 1, { top: '0', bottom: 'auto' }, { top: 'auto', bottom: '0' }),
        sceneController         = new ScrollMagic.Controller(),
        scene                   = new ScrollMagic.Scene({
          triggerElement        : '#Customers',
          duration              : $('main').height(),
          triggerHook           : 1,
          reverse               : true
        })
        .setTween(countryListAnimation)
        .addIndicators()
        .addTo(sceneController);

    });
  </script>
}

