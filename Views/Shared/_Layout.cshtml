<!DOCTYPE html>
<html xmlns="https://www.w3.org/1999/xhtml" lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@Model.Topic.Attributes.Get("MetaTitle", Model.Topic.Title) - GoldSim</title>
    <meta name="keywords" content="@Model.Topic.Attributes.Get("MetaKeywords")" />
    <meta name="description" content="@Model.Topic.Attributes.Get("MetaDescription", Model.Topic.Attributes.Get("Subtitle", ""))" />
    <meta name="google-site-verification" content="EX0ea3_txOh2GJkZZs_sVxxpIg_Yk7RHYB_xOzCv4Qo" />
    <meta name="msvalidate.01" content="502A7C1A613414AC1FCABAA10A8B17AA" />
    <link rel="canonical" href="http://www.goldsim.com/@Request.Path.ToLower()" />
    <link rel="stylesheet" type="text/css" href="/Shared/Styles/Style.css" />
    <style>
      a.selected {
        background-color: #000;
        color: #fff;
      }
      #SiteHeader {
        float: left;
        width: 250px;
        padding-right: 25px;
      }
    </style>
    @RenderSection("Head", false)
    <script>
      // Google Analytics
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-2082450-1', 'auto');
      ga('send', 'pageview');
    </script>
  </head>
  <body vocab="http://schema.org/" typeof="WebPage">

    <!-- Site Header Area -->
	  @if (IsSectionDefined("HeaderSection")) {
      @RenderSection("HeaderSection")
    }
    else {
      <header id="SiteHeader" class="header" role="banner" vocab="http://schema.org" typeof="WPHeader">
        @if (IsSectionDefined("PrimaryNavigationSection")) {
          @RenderSection("PrimaryNavigationSection")
        }
        else {
          <!-- Logo -->
          <a href="/"><img src="/Images/Logo.png" alt="GoldSim Technology Group" class="logo" /></a>

          @Html.Action("Menu", "Layout")

          <!-- Site Search -->
          <gcse:searchbox-only enableHistory="true" enableAutoComplete="true" resultsUrl="/Search/Default.aspx" queryParameterName="SearchText" placeholder="Search GoldSim.com"></gcse:searchbox-only>
          <!-- /Site Search -->

        }
      </header>
    }
    <!-- /Site Header Area -->

    <!-- Page Header Area -->
    @if (IsSectionDefined("ShortPageTitleSection")) {
      @RenderSection("ShortPageTitleSection")
    }
    else {
      <!-- Page Title -->
      <h1 class="page title short">@Model.Topic.Title</h1>
    }

    @if (IsSectionDefined("PageLevelNavigationSection")) {
      @RenderSection("PageLevelNavigationSection")
    }
    else {
      @Html.Action("PageLevelNavigation", "Layout")
    }
    <!-- /Page Header Area -->


    @if (IsSectionDefined("MainContentSection")) {
      @RenderSection("MainContentSection")
    }
    else {
      <!-- Main Site Content Area -->
      <main role="main">
        <article itemscope itemtype="http://schema.org/WebPageElement" itemprop="mainContentOfPage">

          <!-- Long Title (Subtitle) -->
          <h2 class="page title long">@Model.Topic.Attributes.Get("Subtitle")</h2>

          <!-- Main Page Content -->
          @RenderBody()
          <!-- /Main Page Content -->

        </article>
      </main>
      <!-- /Main Site Content Area -->
    }

    @if (IsSectionDefined("FooterSection")) {
      @RenderSection("FooterSection")
    } else {
      @Html.Action("Footer", "Layout")
    }

    <script src="/Shared/Scripts/Vendor/jQuery/jquery-3.0.0.min.js"></script>
    <script src="/Shared/Scripts/Vendor/ZURB/foundation.min.js"></script>
    @RenderSection("Scripts", false)
    <script>

      /**
       * Initialize Foundation
       */
      $(document).foundation();

      /**
       * Google Custom Search script bootstrapping
       */
      (function() {
        var
          cx            = '001116227355942586376:hfih0l8kboc',
          gcse          = document.createElement('script');
        gcse.type       = 'text/javascript';
        gcse.async      = true;
        gcse.src        = (document.location.protocol == 'https' ? 'https:' : 'http:') + '//www.google.com/cse/cse.js?cx=' + cx;
        var s           = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(gcse, s);
      })();

    </script>
  </body>
</html>
