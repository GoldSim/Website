@{
  Layout = null;
  Response.Write("<?xml version=\"1.0\" encoding=\"UTF-8\"?>");
}

@using Microsoft.Security.Application

<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  @foreach (var topic in Model.RootTopic) {
    @AddNodeToOutput(topic, 1)
  }
</urlset>

@helper AddNodeToOutput(Topic topic, int indentLevel) {

  @*=========================================================================================================================
  | DEFINE VARIABLES
  \------------------------------------------------------------------------------------------------------------------------*@
  string[] excludeContentTypes = { "CustomerRequest", "AcademicRequest", "EvaluationRequest" };
  string[] excludeAttributes = { "Body", "IsActive", "IsDisabled", "ParentID", "URL", "RelatedContent", "SortOrder" };

  @*=========================================================================================================================
  | SKIP DISABLED, CONFIGURATION, AND EXCLUDED CONTENT TYPES
  \------------------------------------------------------------------------------------------------------------------------*@
  if (topic.Attributes.Get("IsInactive") == "1" || topic.Attributes.Get("IsDisabled") == "1") {return;}
  if (topic.UniqueKey.StartsWith("Root:Configuration")) {return;}
  if (topic.UniqueKey.IndexOf("CustomerRequests") >= 0) {return;}
  if (Array.IndexOf(excludeContentTypes, topic.Attributes.Get("ContentType")) >= 0) {return;}

  @*=========================================================================================================================
  | OPEN NODE
  \------------------------------------------------------------------------------------------------------------------------*@
  <url>
    <loc>@Html.Encode("https://www.goldsim.com" + topic.WebPath)</loc>
    <changefreq>monthly</changefreq>
    <priority>@(1.0/indentLevel)</priority>
    <PageMap xmlns="http://www.google.com/schemas/sitemap-pagemap/1.0">

      @*=====================================================================================================================
      | LOOP THROUGH ATTRIBUTES
      \--------------------------------------------------------------------------------------------------------------------*@
      <DataObject type="@topic.Attributes.Get("ContentType", "Page" )">
        @foreach (var attribute in topic.Attributes) {
          if (Array.IndexOf(excludeAttributes, attribute.Key) >= 0) { continue; }
          if (topic.Attributes[attribute.Key].Value.Length > 256) { continue; }
          <Attribute name="@attribute.Key">@Encoder.XmlEncode((string)topic.Attributes[attribute.Key].Value)</Attribute>
        }
      </DataObject>

      @*=====================================================================================================================
      | LOOP THROUGH RELATIONSHIPS
      \--------------------------------------------------------------------------------------------------------------------*@
      @foreach (var relationship in topic.Relationships) {
        <DataObject type="@relationship.Key">
          @foreach (var relatedTopic in topic.Relationships[relationship.Key]) {
            <Attribute name="TopicKey">@relatedTopic.UniqueKey.Replace("Root:", "")</Attribute>
          }
        </DataObject>
      }
    </PageMap>
  </url>

  @*=========================================================================================================================
  | LOOP THROUGH CHILDREN
  \------------------------------------------------------------------------------------------------------------------------*@
  foreach (var childNode in topic) {
    @AddNodeToOutput(childNode, indentLevel + 1);
  }

}
