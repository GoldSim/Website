            <!-- Long Page Title : BEGIN -->
            <tr>
              <td bgcolor="#f3f3f3" align="left" style="padding: 32px 48px;">
                <h1 style="margin: 0 0 8px; font-family: 'Oxygen','Source Sans Pro','Helvetica Neue',Helvetica,Roboto,Arial,sans-serif; font-size: 32px; color: #666666; font-weight: 300;">@Model.Title</h1>
                <p style="margin: 0; font-family: 'Oxygen','Source Sans Pro','Helvetica Neue',Helvetica,Roboto,Arial,sans-serif; font-size: 24px; color: #999999; font-weight: 300;">@Model.Subtitle</p>
              </td>
            </tr>
            <!-- Long Page Title : END -->

            <!-- 1 Column Text + Button : BEGIN -->
            <tr>
              <td bgcolor="#ffffff" style="-webkit-box-shadow: 0 0 9px 2px rgba(0,0,0,.07); box-shadow: 0 0 9px 2px rgba(0,0,0,.07);">
                <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                  <tr>
                    <td style="padding: 20px 48px; font-family: sans-serif; font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,Roboto,Arial,sans-serif; font-size: 18px; line-height: 29px; color: #202020;">
                      @Html.Raw(Model.Body)
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
            <!-- 1 Column Text + Button : END -->

          </table>
          <!-- Email Body : END -->

          <!--[if mso]>
          </td>
          </tr>
          </table>
          <![endif]-->
      </div>

      <!-- Full Bleed Background Section : BEGIN -->
      <table role="presentation" bgcolor="#666666" cellspacing="0" cellpadding="0" border="0" align="center" width="100%">
        <tr>
          <td valign="top" align="center">
            <div style="max-width: 600px; margin: auto;" class="email-container">
              <!--[if mso]>
              <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="600" align="center">
              <tr>
              <td>
              <![endif]-->
              <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                <tr>
