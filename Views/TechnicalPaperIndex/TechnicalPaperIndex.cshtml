@model Ignia.Topics.Web.Mvc.TopicViewModel

@{
  ViewBag.Title = Model.Topic.Title;
  Layout = "~/Views/Layout/_Layout.cshtml";
}

<h2>Technical Paper Index Content Type</h2>

<h1>@Model.Topic.Title</h1>
<h2>@Model.Topic.Attributes.Get("Title")</h2>

<p>@Model.Topic.Attributes.Get("Body")</p>

<h2>Technical Papers (Nested Topics)</h2>
<ul>
  @foreach (Ignia.Topics.Topic paper in Model.Topic["ContentItems"]) {
    <li><strong>@paper.Title</strong>: @paper.Attributes.Get("Description")</li>
  }
</ul>

<br>(~/Views/TechnicalPaperIndex/TechnicalPaperIndex.cshtml)